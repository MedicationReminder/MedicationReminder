<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/recycleViewItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
           android:id="@+id/content"
            android:textColor="@color/textColor2"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="牛奶可以空腹喝吗？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/topic_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#药品分析#"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

    </LinearLayout>
<TextView
    android:id="@+id/status"
    android:drawableRight="@mipmap/yiwen"
    android:textSize="18dp"
    android:textColor="@color/textColor"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:text="状态"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:text="提问时间2017/07/28"
            android:textColor="@color/textColor"
            android:textSize="18dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/replies_count"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:drawableLeft="@mipmap/message"
            android:gravity="center"
            android:text="6" />
    </LinearLayout>

    <View
      android:layout_marginRight="12dp"
 android:layout_marginLeft="15dp"
      android:background="@color/textColor2"
      android:layout_width="match_parent"
      android:layout_height="1dp"></View>
</LinearLayout>